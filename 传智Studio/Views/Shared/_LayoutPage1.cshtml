    //加载用户信息
    function LoadUserInfo() {
        $.post("/UserInfo/UserInfoLoding", {}, function (data) {
            var str = data.split(':');
            if (str[0] == "ok") {
                $("#userName").text(str[1]);
            } else {
                window.location.href = "/Home/Login";
            }
        });
    }
        //不允许输入空格 
    function UnBlank(controll){
        controll.value = controll.value.replace(/\s/g, '')
    }
    </script>
